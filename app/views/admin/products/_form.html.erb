<%= form_for @product, url: yield(:url) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: t('admin.product.name'), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.number_field :price, placeholder: t('admin.product.price'), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :description, placeholder: t('admin.product.description'), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t('admin.product.category_name') %>
    <%= f.collection_select(:category_id, @categories, :id, :categories_by_partner)%>
  </div>
  <div class="form-group">
    <%= image_tag @product.image.url , class: "img-product" %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit yield(:button), class: "btn btn-info form-control" %>
  </div>
<% end %>
