<%= form_for @voucher, url: yield(:url) do |f| %>
  <div class="form-group">
    <%= f.text_field :code, placeholder:  t('admin.voucher.code') , class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :discount, placeholder: t('admin.voucher.discount'), class:
      "form-control" %>
  </div>

  <div class="form-group">
    <%= f.phone_field :condition, placeholder: t('admin.voucher.condition'), class:
      "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :description, placeholder: t('admin.voucher.description'), class:
      "form-control" %>
  </div>

  <div class="form-group">
     <%= f.label :expiry_date, t('admin.voucher.expiry_date'), class:"delivery" %>
    <%= f.date_field(:expiry_date, {min: Date.today + 1}) %>
  </div>

  <div class="form-group">
    <%= f.number_field :usage_limit, in: 1.0..20.0, placeholder: t('admin.voucher.usage_limit'), class:
      "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit yield(:button), class: "btn btn-info form-control" %>
  </div>
<% end %>
